rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Photos de profil : lecture pour tous les utilisateurs authentifiés, écriture/suppression uniquement par le propriétaire
    match /profile-photos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents/ressources de l'entreprise (pour futures fonctionnalités)
    match /entreprise/{entrepriseId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Fichiers temporaires (pour uploads en cours)
    match /temp/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tous les autres fichiers : refus par défaut
    match /{allPaths=**} {
      allow read, write, delete: if false;
    }
  }
}

